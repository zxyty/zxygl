{
  "compilerOptions": {
    "sourceMap": true,
    "allowJs": true,
    "module": "commonjs",
    "removeComments": false, //true,
    // 可以使用 Promise, async, await等新语法
    "target": "es2017",
    "outDir": "src",
    "noImplicitAny": true,
    "preserveConstEnums": true
  },
  "include": [
    "tsrc/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
